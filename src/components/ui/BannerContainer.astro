---

interface Props {
    containerStyles: string
}

const { containerStyles } = Astro.props;
---

<section
  class={`grid
  grid-cols-2
  items-center
  px-4
  sm:p-8
  w-full
  rounded-2xl
  hover:shadow-lg
  min-h-[300px]
  relative
  ${containerStyles}
  transition
  duration-300`}>
		<slot name="first-col"/>	
		<slot name="second-col"/>	
</section>