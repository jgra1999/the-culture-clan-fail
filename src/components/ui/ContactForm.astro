---
import ButtonPrimary from "./ButtonPrimary.astro";

---

<form action="" class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-20 mt-5 md:mt-10 min-w-full lg:min-w-[1000px]">
    <div>
        <input type="text" placeholder="Nombre y Apellido" class="bg-[#F3F3F3] text-zinc-500 font-semibold py-3 pl-3 rounded-lg w-full border-2 border-darkGray">
    </div>
    <div>
        <input type="text" placeholder="Asunto" class="bg-[#F3F3F3] text-zinc-500 font-semibold py-3 pl-3 rounded-lg w-full border-2 border-darkGray">
    </div>
    <div class="md:col-span-2">
        <textarea name="message" id="" placeholder="Describenos tu idea"  rows="5" class="bg-[#F3F3F3] text-zinc-500 font-semibold py-3 pl-3 rounded-lg w-full border-2 border-darkGray"></textarea>
    </div>
    <ButtonPrimary text='Enviar' link='/' containerStyles='bg-darkGray text-white hover:bg-darkGray/80 active:bg-darkGray/80 max-w-[179px]' />
</form>