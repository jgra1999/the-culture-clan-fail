---
interface Props{
    title: string
    subtitle: string
    description: string
}

const {title, subtitle, description} = Astro.props
---

<div class="flex flex-col gap-y-4 text-center md:text-left">
    <div class="">
        <h3 class="font-bold text-sm md:text-lg lg:text-xl opacity-80">{subtitle}</h3>
        <h2 class="font-extrabold text-4xl lg:text-5xl xl:text-7xl leading-none uppercase">{title}</h2>
    </div>
    <p class="text-sm lg:text-base font-semibold text-pretty max-w-[420px] lg:max-w-[480px]">{description}</p>
</div>



<style>
	h3{
		font-family: 'Poppins', system-ui;
	}
</style>